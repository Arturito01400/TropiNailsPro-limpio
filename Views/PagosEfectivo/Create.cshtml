@model TropiNailsPro.Models.PagoEfectivo

@{
    ViewData["Title"] = "Registrar Pago en Efectivo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="NombreCliente"></label>
        <input asp-for="NombreCliente" class="form-control" />
        <span asp-validation-for="NombreCliente" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Notas"></label>
        <textarea asp-for="Notas" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
