@model TropiNailsPro.Models.PagoTransferencia

@{
    ViewData["Title"] = "Subir Comprobante de Pago";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">📤 Subir Comprobante de Transferencia</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Transferencia" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm border-primary">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="NombreCliente" class="form-label">👩 Nombre del Cliente</label>
                    <input asp-for="NombreCliente" class="form-control" required />
                    <span asp-validation-for="NombreCliente" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BancoOrigen" class="form-label">🏦 Banco de Origen</label>
                    <input asp-for="BancoOrigen" class="form-control" required />
                    <span asp-validation-for="BancoOrigen" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Monto" class="form-label">💵 Monto Transferido (RD$)</label>
                    <input asp-for="Monto" type="number" step="0.01" class="form-control" required />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NumeroReferencia" class="form-label">🔢 Número de Referencia</label>
                    <input asp-for="NumeroReferencia" class="form-control" required />
                    <span asp-validation-for="NumeroReferencia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Modelo" class="form-label">💅 Modelo solicitado</label>
                    <input asp-for="Modelo" class="form-control" required />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">🖼️ Imagen del Comprobante</label>
                    <input type="file" name="Imagen" accept="image/*" class="form-control" required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        ✅ Enviar Comprobante
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">⬅️ Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
