@model TropiNailsPro.Models.ModeloUnas

@{
    ViewData["Title"] = "Eliminar Modelo de Uñas";
}

<h2 class="text-danger text-center mb-4">@ViewData["Title"]</h2>

<div class="alert alert-warning text-center">
    ⚠️ ¿Estás segura de que deseas eliminar este modelo de uñas? Esta acción no se puede deshacer.
</div>

<div class="card shadow p-4 mt-3">
    <dl class="row">
        <dt class="col-sm-3">💅 Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">📝 Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">💵 Precio</dt>
        <dd class="col-sm-9">RD$ @Model.Precio.ToString("N2")</dd>

        <dt class="col-sm-3">🖼 Imagen</dt>
        <dd class="col-sm-9">
            <img src="@Model.ImagenUrl" alt="Imagen del modelo" class="img-thumbnail shadow" style="max-height: 200px;" />
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post" class="text-center mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger px-4 me-2">
            ❌ Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            ↩️ Cancelar
        </a>
    </form>
</div>
