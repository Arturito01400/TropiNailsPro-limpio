@model IEnumerable<TropiNailsPro.Models.ModeloUnas>

@{
    ViewData["Title"] = "Modelos de U√±as";
    var usuario = ViewBag.UsuarioNombre as string;
}

<h2 class="text-center text-white mb-4">@ViewData["Title"]</h2>

<!-- Mensaje temporal -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success text-center fw-bold">
        @TempData["Mensaje"]
    </div>
}

<!-- Bot√≥n agregar visible solo para Arturito -->
@if (usuario == "Arturito")
{
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-success px-4">‚ûï Agregar Nuevo Modelo</a>
    </div>
}

<!-- Tarjetas de modelos -->
<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg border-0">
                <img src="@item.ImagenUrl" class="card-img-top" alt="Modelo de u√±as"
                     style="height: 250px; object-fit: cover;" />

                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">@item.Nombre</h5>
                    <p class="card-text text-muted">@item.Descripcion</p>
                    <p class="card-text"><strong>RD$ @item.Precio.ToString("N2")</strong></p>

                    <div class="d-grid gap-2">
                        <!-- Solo Arturito puede editar/eliminar -->
                        @if (usuario == "Arturito")
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">‚úèÔ∏è Editar</a>

                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('¬øEst√°s seguro de eliminar este modelo?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm">üóëÔ∏è Eliminar</button>
                            </form>
                        }

                        <!-- Disponible para todas las clientas -->
                        <a asp-action="Elegir" asp-route-id="@item.Id" class="btn btn-primary btn-sm">‚ú® Elegir este Modelo</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

